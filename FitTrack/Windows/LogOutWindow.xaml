<Window x:Class="FitTrack.Windows.LogOutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack.Windows"
        mc:Ignorable="d"
        Title="LogOutWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#DC143C" Offset="0.0" />
                <GradientStop Color="Black" Offset="2.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Text="Are you sure you want to log out?" HorizontalAlignment="Left" VerticalAlignment="Top" Height="41" Width="354" FontSize="20" Margin="225,94,0,0"  FontWeight="UltraBold" Background="Transparent"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">


            <Button x:Name="YesBTN" Content="YES" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" Width="167" Click="YesBTN_Click"/>

            <Button x:Name="NoBTN" Content="NO"  Height="45" Width="167" Click="NoBTN_Click"/>
        </StackPanel>
    </Grid>
</Window>
